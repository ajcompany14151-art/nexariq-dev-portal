# Production Environment Variables
# Copy this to .env.local and fill in your production values

# Database
DATABASE_URL="postgresql://username:password@hostname:port/database"

# NextAuth
NEXTAUTH_SECRET="your-super-secure-production-secret-here-minimum-32-characters"
NEXTAUTH_URL="https://your-production-domain.vercel.app"

# API Configuration
API_BASE_URL="https://your-production-domain.vercel.app/api"

# External API Keys (if needed)
GROQ_API_KEY="gsk_your-groq-api-key-here"

# OAuth Providers
GOOGLE_CLIENT_ID="your-production-google-client-id"
GOOGLE_CLIENT_SECRET="your-production-google-client-secret"
GITHUB_ID="your-production-github-app-id"
GITHUB_SECRET="your-production-github-app-secret"

# Feature Flags
ENABLE_ANALYTICS="true"
ENABLE_RATE_LIMITING="true"
ENABLE_IP_WHITELIST="true"

# Rate Limiting Configuration
DEFAULT_RATE_LIMIT_PER_MINUTE="60"
DEFAULT_RATE_LIMIT_PER_HOUR="1000"
DEFAULT_RATE_LIMIT_PER_DAY="10000"

# Security
CORS_ORIGIN="https://your-production-domain.vercel.app"
SESSION_MAX_AGE="2592000"  # 30 days in seconds

# Monitoring and Logging
LOG_LEVEL="error"
ENABLE_REQUEST_LOGGING="true"

# Email Configuration (if implemented)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""
FROM_EMAIL="noreply@your-domain.com"