// This is your Prisma schema file for NexarIQ AI Platform
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

// ================================
// ðŸ”¹ USER MANAGEMENT
// ================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(DEVELOPER)
  provider      String?
  providerId    String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  apiKeys       ApiKey[]
  subscriptions Subscription[]
  usageLogs     UsageLog[]
  ipWhitelists  IpWhitelist[]
  rateLimits    RateLimit[]
  
  @@map("users")
}

// ================================
// ðŸ”¹ AUTHENTICATION (NextAuth)
// ================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

// ================================
// ðŸ”¹ API KEY MANAGEMENT
// ================================

model ApiKey {
  id          String      @id @default(cuid())
  name        String
  key         String      @unique
  userId      String
  scopes      String      @default("[]") // JSON string of scopes
  environment Environment @default(SANDBOX)
  isActive    Boolean     @default(true)
  lastUsed    DateTime?
  expires     DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  // Rate limiting fields
  rateLimitPerMinute  Int      @default(60)    // requests per minute
  rateLimitPerHour    Int      @default(1000)  // requests per hour
  rateLimitPerDay     Int      @default(10000) // requests per day
  
  // Relations
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  usageLogs   UsageLog[]
  rateLimits  RateLimit[]
  
  @@map("api_keys")
}

// ================================
// ðŸ”¹ USAGE TRACKING
// ================================

model UsageLog {
  id           String   @id @default(cuid())
  apiKeyId     String
  userId       String
  endpoint     String
  method       String
  statusCode   Int
  tokensUsed   Int      @default(0)
  ipAddress    String
  userAgent    String?
  responseTime Int?     // in milliseconds
  createdAt    DateTime @default(now())
  
  // Relations
  apiKey       ApiKey   @relation(fields: [apiKeyId], references: [id], onDelete: Cascade)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("usage_logs")
}

// ================================
// ðŸ”¹ RATE LIMITING
// ================================

model RateLimit {
  id           String   @id @default(cuid())
  windowType   String   // minute, hour, day
  windowStart  DateTime @default(now())
  requestCount Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  apiKeyId     String
  userId       String
  
  // Relations
  apiKey       ApiKey   @relation(fields: [apiKeyId], references: [id], onDelete: Cascade)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([apiKeyId, windowType, windowStart])
  @@map("rate_limits")
}

// ================================
// ðŸ”¹ SUBSCRIPTION MANAGEMENT
// ================================

model Subscription {
  id                   String           @id @default(cuid())
  userId               String
  stripeCustomerId     String?          @unique
  stripeSubscriptionId String?          @unique
  plan                 SubscriptionPlan @default(FREE)
  status               String?
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean          @default(false)
  createdAt            DateTime         @default(now())
  updatedAt            DateTime         @updatedAt
  
  // Relations
  user                 User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("subscriptions")
}

// ================================
// ðŸ”¹ SECURITY FEATURES
// ================================

model IpWhitelist {
  id        String   @id @default(cuid())
  userId    String
  ipAddress String
  label     String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("ip_whitelists")
}

// ================================
// ðŸ”¹ ENUMS
// ================================

enum UserRole {
  ADMIN
  DEVELOPER
  VIEWER
}

enum Environment {
  SANDBOX
  PRODUCTION
}

enum SubscriptionPlan {
  FREE
  PRO
  ENTERPRISE
}
